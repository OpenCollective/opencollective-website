// You can also omit the eslint-config- and it will be automatically assumed by ESLint:
{
    "extends": "opencollective",
    "env": {
        "mocha": true
    },
    "plugins": [
        "mocha"
    ],
    "rules": {
        "no-console": 0,
        "mocha/no-exclusive-tests": "error",
        "no-unused-vars": ["error", {
          "vars": "local",
          "args": "none"
        }]
    }
}
